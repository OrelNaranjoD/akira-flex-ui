{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-organize-attributes"],
  "semi": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "strict",
  "vueIndentScriptAndStyle": false,
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "parser": "typescript",
        "printWidth": 100
      }
    },
    {
      "files": ["*.component.html", "*.html"],
      "options": {
        "parser": "html",
        "printWidth": 120,
        "bracketSameLine": false,
        "htmlWhitespaceSensitivity": "css",
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css",
        "singleQuote": false,
        "printWidth": 120
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "parser": "markdown",
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "parser": "yaml",
        "tabWidth": 2,
        "singleQuote": true
      }
    }
  ]
}
