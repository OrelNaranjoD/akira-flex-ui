{
  "name": "akira-flex-landing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/akira-flex-landing/src",
  "i18n": {
    "sourceLocale": { "code": "en", "subPath": "en" },
    "locales": {
      "es": {
        "translation": "libs/core/src/lib/i18n/locale/messages.es.xlf",
        "subPath": "es"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/akira-flex-landing",
        "browser": "apps/akira-flex-landing/src/main.ts",
        "tsConfig": "apps/akira-flex-landing/tsconfig.app.json",
        "styles": ["apps/akira-flex-landing/src/styles.css"],
        "server": "apps/akira-flex-landing/src/main.server.ts",
        "ssr": {
          "entry": "apps/akira-flex-landing/src/server.ts"
        },
        "budgets": [
          {
            "type": "initial",
            "maximumWarning": "1MB",
            "maximumError": "1.5MB"
          },
          {
            "type": "bundle",
            "name": "main",
            "maximumWarning": "200KB",
            "maximumError": "300KB"
          }
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1MB",
              "maximumError": "1.5MB"
            },
            {
              "type": "bundle",
              "name": "main",
              "maximumWarning": "200KB",
              "maximumError": "300KB"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/akira-flex-landing/src/environments/environment.ts",
              "with": "apps/akira-flex-landing/src/environments/environment.prod.ts"
            }
          ]
        },
        "es": {
          "localize": ["es"]
        }
      }
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 4200
      }
    },
    "serve:ssr": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/akira-flex-landing/server/server.mjs"
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "akira-flex-landing:build:development",
        "format": "xlf2",
        "outputPath": "libs/core/src/lib/i18n/locale/landing"
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": ["apps/akira-flex-landing/**/*.ts", "apps/akira-flex-landing/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "apps/akira-flex-landing/vitest.config.ts",
        "reportsDirectory": "../../coverage/akira-flex-landing"
      },
      "outputs": ["{workspaceRoot}/coverage/akira-flex-landing"]
    }
  }
}
