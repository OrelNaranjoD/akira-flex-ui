{
  "name": "akira-flex-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/core/src",
  "prefix": "app",
  "tags": ["shared", "angular", "core"],
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "libs/core/tsconfig.lib.json",
        "outputPath": "dist/libs/akira-flex-core",
        "main": "libs/core/src/index.ts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/core/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/libs/core"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/core/**/*.ts", "libs/core/**/*.html"]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "libs/core/.storybook",
        "browserTarget": "akira-flex-core:build"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "options": {
        "outputPath": "dist/storybook/akira-flex-core",
        "configDir": "libs/core/.storybook"
      }
    }
  }
}
